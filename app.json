{
  "expo": {
    "name": "Cluttr",
    "slug": "cluttr",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "com.cluttrapp.cluttr",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cluttrapp.cluttr",
      "buildNumber": "13",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to upload avatar images.",
        "NSCameraUsageDescription": "This app needs access to your camera to take photos for your avatar."
      }
    },
    "android": {
      "package": "com.cluttrapp.cluttr",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      "@react-native-community/datetimepicker",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you upload avatar images.",
          "cameraPermission": "The app accesses your camera to let you take photos for your avatar."
        }
      ],
      "expo-router"
    ],
    "extra": {
      "eas": {
        "projectId": "08491de0-9ea6-4512-b863-2b4161121d7d"
      }
    }
  }
}
